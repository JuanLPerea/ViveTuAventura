<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/titulo3_img_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:scaleType="center"
        android:src="@drawable/nombre_app" />


    <TextView
        android:id="@+id/texto_dialog_jugarTV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:fontFamily="@font/schoolbell"
        android:gravity="center"
        android:text="Por favor, vota esta historia:"
        android:textColor="@color/design_default_color_error"
        android:textSize="30sp" />

    <NumberPicker
        android:id="@+id/numberPickerVotar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:theme="@style/NumberPickerText" />


    <Button
        android:id="@+id/votar_dialog_BTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/schoolbell"
        android:gravity="center_horizontal|center_vertical"
        android:text="Votar" />


    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="0dp"
        android:layout_weight="0"
        android:background="@android:color/black"
        android:orientation="horizontal"></LinearLayout>

</LinearLayout>